<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    //this is the secondary custom alert dialog theme-->
    <style name="AlertDialogRed" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF5252</item>

        <item name="android:textColorPrimary">@color/black</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">@color/white</item>
    </style>

    <!--    //this is the secondary custom alert dialog theme-->
    <style name="AlertDialogBlue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dark_blue</item>

        <item name="android:textColorPrimary">@color/black</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">@color/white</item>
    </style>

</resources>
